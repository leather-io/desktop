{
  "files.associations": {
    ".babelrc": "jsonc",
    ".eslintrc": "jsonc",
    ".prettierrc": "jsonc",
    ".stylelintrc": "json",
    ".dockerignore": "ignore",
    ".eslintignore": "ignore"
  },
  "javascript.validate.enable": false,
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  "files.exclude": {
    "app/node_modules/": true,
    "app/dist/": true
  },
  "search.exclude": {
    ".git": true,
    ".eslintcache": true,
    "app/dist/**": true,
    "app/main.prod.js": true,
    "app/renderer.prod.js": true,
    "app/main.prod.js.map": true,
    "app/node_modules": true,
    "dll": true,
    "release": true,
    "node_modules": true,
    "npm-debug.log.*": true,
    "test/**/__snapshots__": true,
    "yarn.lock": true,
    "*.{css,sass,scss}.d.ts": true,
    "**/.yalc/**": true
  },
  "editor.formatOnSave": true
}
